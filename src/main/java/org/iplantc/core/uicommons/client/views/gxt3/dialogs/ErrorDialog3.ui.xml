<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxtButton="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:gxtForm="urn:import:com.sencha.gxt.widget.core.client.form">
   <ui:style>
   	 .bg-color { background-color: #F1F1F1; }
   </ui:style>
   
   <ui:with field="display" type="org.iplantc.core.uicommons.client.CommonUIDisplayStrings"/>
   <ui:with field="icons" type="org.iplantc.core.uicommons.client.views.gxt3.dialogs.ErrorDialog3.Icons"></ui:with>
   
   <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="topData">
    <ui:attributes width="1" height="40" />
  </ui:with>   
   <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="middleData">
    <ui:attributes width="-1" height="-1" />
  </ui:with>   
   <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="bottomData">
    <ui:attributes width="1" height="-1" />
  </ui:with>   
   <container:VerticalLayoutContainer>
      <container:child layoutData="{topData}">                                  
         <container:HorizontalLayoutContainer ui:field="msgHorzPanel"
                                              styleName="{style.bg-color}">
            <g:Image resource="{icons.iconError}" />
            <g:HTML ui:field="errorMsg" /> 
         </container:HorizontalLayoutContainer>
      </container:child>
      <container:child layoutData="{middleData}">
         <gxtButton:TextButton ui:field="expandDetailsButton"
                               text="{display.details} &raquo;"/>
      </container:child>
      <container:child layoutData="{bottomData}">
         <gxt:ContentPanel ui:field="detailsPanel"
                           headerVisible="false"
                           collapsible="true">
            <gxtForm:TextArea ui:field="descriptionArea"
                              readOnly="true"/>
         </gxt:ContentPanel>
      </container:child>
   </container:VerticalLayoutContainer>


</ui:UiBinder> 